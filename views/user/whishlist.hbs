<section class=" section pt-3 mb-5">
    <div class="container-fluid">
      <div class="row mt-3">
        <h2 class="cl">Whishlists</h2>
        
        {{#each products}}
        <div class="col-6 col-md-2 product">
        <div class="card-outer m-1" style="border: none; ">
          <div class="card border border-shadow card-outer">
        <a class="load" href="/detailed-view/{{this.product._id}}" >
            <img src="/product-image/{{this.product._id}}.jpg" class="card-img-top" style="height:13em" alt="">
            <p class="card-text">{{this.product.name}}</p>
            <div class="card-body pt-0" style="line-height: 3px;">
              <p class="card-text">Rs.{{this.product.price}}/-</p>
            </div>
            <div class="pt-0 description-text" style="height: 50px;">
              <p class="card-text mt-0">{{this.product.description}}</p>
            </div>
        </a>
            <div class="mb-1">
              <div style="color: rgb(9, 128, 104);font-size:18px;width:fit-content;display: inline;padding: 0;" ><span >{{#if this.averageRating }}{{this.averageRating}}{{else}}5.0{{/if}} &#9733; </span></div>
             <div class="p-0" style="display: inline;"> <button class="btn button mb-1" onclick="addToCart('{{this.product._id}}',{{user}})"
                style="color: rgb(255, 255, 255);padding: 3px;font-size: 13px;" >Add to cart</button></div></div>
          </div>
        </div>
      </div>
        {{/each}}

      </div>
    </div>
  </section>
  