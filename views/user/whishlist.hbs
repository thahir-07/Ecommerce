<style>
    .cont {
    font-family: Arial, sans-serif;
    background-color: #f7f7f7;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 90vh;
}

.cart {
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    text-align: center;
}

.cart h1 {
    font-size: 24px;
    margin-bottom: 20px;
}



.empty-cart-message {
    margin-top: 20px;
    padding: 20px;
    border: 2px dashed #ccc;
    border-radius: 8px;
    background-color: #f7f7f7;
}

.empty-cart-message p {
    font-size: 18px;
    margin-bottom: 10px;
}

.empty-cart-message a {
    display: inline-block;
    padding: 10px 20px;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

.empty-cart-message a:is(:hover,:active) {
    background-color: #0056b3;
}
</style>
{{#if products}}
<section class="section-border pb-3">
  <div class="container-fluid text-center">
     <h2 >Whishlists</h2>
     <div class="row">
          {{#each products}}
       <div class="col-6 col-md-2 p-0" >
        <div class="card-outer mr-0 m-1" style="border: 1px solid rgba(149, 142, 142, 0.329); overflow: hidden; border-radius: 0px;">
          <div class="card border border-shadow card-outer" style="border-radius: 0;">
        <a class="load" href="/detailed-view/{{this.product._id}}" >
            <img src="/product-image/{{this.product._id}}.jpg" class="card-img-top" style="height:12em;object-fit: contain;" alt="">
            <div style="height: 30px;overflow: hidden;">
            <p class="card-text">{{this.product.name}}</p>
            </div>
            <div class="card-body pt-0" style="line-height: 3px;">
              <p class="card-text p-0"><span class="amt">{{this.product.price}}</span></p>
            </div>
            
        </a>
           <div class="mb-1">
              <div style="color: rgb(9, 128, 104);font-size:18px;width:fit-content;display: inline;padding: 0;" ><span >{{#if this.averageRating }}{{this.averageRating}}{{else}}5.0{{/if}} &#9733; </span></div>
            <div class="p-0 " style="display: inline;"> <span style="font-size:20px;cursor: pointer;" id="whishlist{{this.product._id}}" class="whishlist{{this.product._id}}" onclick="remove_From_Whishlist('{{this.product._id}}')">❤️</span></div></div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>


  {{else}}
  <div class="cont">
 <div class="cart">
       
        <div class="cart-items">
            <!-- You can put your cart items here dynamically -->
        </div>
        <div class="empty-cart-message">
            <p>Your whishlist is currently empty.</p>
            <a href="/" class="button">Continue Adding</a>
        </div>
    </div>
    </div>
  {{/if}}





  <script>
     function formatIndianAmountInINR(amount) {
  const formatter = new Intl.NumberFormat('en-IN', { style: 'currency', currency: 'INR' });
  const formattedAmount = formatter.format(amount);
  return formattedAmount;
}
  // Get all elements with the class name `amt`.
const amtElements = document.querySelectorAll('.amt');
for (const element of amtElements) {
  const textContent = element.textContent;
  const formattedTextContent = formatIndianAmountInINR(textContent);
  element.textContent = formattedTextContent;
}
  </script>
  