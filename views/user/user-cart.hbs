<section>
    <div class="container">
        <div class="row">
            <div class="col-12 text-center pt-5">
                <h1 class="pb-3">Cart Items</h1>
                <table class="table ">
                    <thead>
                    <tr >
                        <th>items </th>
                        <th> title</th>
                        <th>price</th>
                        <th>quantity </th>
                        
                    </tr>
                    </thead>
                     
                    <tbody>

                        {{#each products}}
                       
                        <tr>
                           
                           
                            <td><img src="/product-image/{{this.product._id}}.jpg" style="width:100px;height:100px" alt=""></td>
                            <td>{{this.product.name}}</td>
                            <td>Rs.{{this.product.price}}/-</td>
                             
                            <td>
                                <button class="cart-item-count bg-info text-white" style="width:30px" onclick="changeQuantity('{{this._id}}','{{this.item}}',-1)">-</button>
                               <span id="{{this.product._id}}">{{this.quantity}}</span> 
                                <button class="cart-item-count bg-info text-white"  style="width:30px" onclick="changeQuantity('{{this._id}}','{{this.item}}',1)">+</button>
                                    
                            </td>
                            <td>
                                
                                <a href="/remove/{{this.item}}" onclick=" return confirm('Are you sure! you want remove this product from cart?')" class="btn btn-danger"> remove</a>
                               
                            </td>

                        </tr>
                       
                        {{/each}}
                        
                        
                        
                    </tbody>
                   
                </table>
                <hr>
                <div class="float-rigt">

                <h3 class=" mt-5">Total:Rs.<span id="total">{{total}}</span></h3>
                {{#if total}}
                <a class="btn btn-success mt-2 mb-2" href="/place-order">Place Order</a>
                {{/if}}
                </div>
                
                
                

            </div>
           
             
        </div>

    </div>
     
   
</section>

