<style>
    .cont {
    font-family: Arial, sans-serif;
    background-color: #f7f7f7;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 90vh;
}

.cart {
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    text-align: center;
}

.cart h1 {
    font-size: 24px;
    margin-bottom: 20px;
}



.empty-cart-message {
    margin-top: 20px;
    padding: 20px;
    border: 2px dashed #ccc;
    border-radius: 8px;
    background-color: #f7f7f7;
}

.empty-cart-message p {
    font-size: 18px;
    margin-bottom: 10px;
}

.empty-cart-message a {
    display: inline-block;
    padding: 10px 20px;
    background-color: #007BFF;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

.empty-cart-message a:hover {
    background-color: #0056b3;
}

</style>
{{#if products}}
<section>
    <div class="container pt-3">
        {{#each products}}
        <div class="row">            
                            <div class="col-3">
                            <a href="/detailed-view/{{this.product._id}}"><img src="/product-image/{{this.product._id}}.jpg" style="width:80px;height:100px" alt=""></a></td>
                            </div>
                            <div class="col-3 text-center m-0"> {{this.product.name}}</div>
                          
                           <div class="col-3 text-center "> <span class="amt" >{{this.product.price}}</span></div>
                             
                           
                                <div class="col-3 text-center" >
                                    <div>
                                    <button class="bg-color text-white qty-btn m-0" style="border: none;padding-right: 8px; padding-left: 8px;border-radius: 2px;" onclick="changeQuantity('{{this._id}}','{{this.item}}',-1)">-</button>
                               <span id="{{this.product._id}}">{{this.quantity}}</span> 
                                <button class="bg-color text-white qty-btn m-0"  style="border: none;border-radius: 2px; margin: 0;" onclick="changeQuantity('{{this._id}}','{{this.item}}',1)">+</button><br>
                                 <div class="mt-4 text-center m-0"> <a href="/remove/{{this.item}}" onclick=" return confirm('Are you sure! you want remove this product from cart?')" class="btn btn-danger" style="padding: 2px;margin: 0;"> Remove</a></div>
                                </div>
                                </div>      
                            
                                </div>                
                                
                        <hr>
                        {{/each}}

                        
                   
                <div class="text-center p-1">
                   {{#if total}}

                <h3 class="mt-2">Total : <span class="amt" id="total">{{total}}</span></h3>
                
                <a class="btn button mt-1 mb-4" style="color: white; padding: 3px;" href="/place-order">Place Order</a>
                {{/if}}
                </div>

            </div>
           
             
        </div>

    </div>
     
   
</section>
{{else}}
<div class="cont">
 <div class="cart">
       
        <div class="cart-items">
            <!-- You can put your cart items here dynamically -->
        </div>
        <div class="empty-cart-message">
            <p>Your cart is currently empty.</p>
            <a href="/">Continue Shopping</a>
        </div>
    </div>
    </div>
   
{{/if}}
<script>
 function formatIndianAmountInINR(amount) {
  const formatter = new Intl.NumberFormat('en-IN', { style: 'currency', currency: 'INR' });
  const formattedAmount = formatter.format(amount);
  return formattedAmount;
}
  // Get all elements with the class name `amt`.
const amtElements = document.querySelectorAll('.amt');
for (const element of amtElements) {
  const textContent = element.textContent;
  const formattedTextContent = formatIndianAmountInINR(textContent);
  element.textContent = formattedTextContent;
}
</script>



