<style>
    .contact{
       
        width:90% ;
        margin-left: auto;
        margin-right: auto;
        padding: 30px;
        border-radius: 10px;
       box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
       background-color: rgba(244, 252, 241, 0.371);
    }
    
</style>

<div class="container mt-5 pt-5 ">
    <div class="row justify-content-center">
        <div class="col-12">
                <div class="contact">

            <h2 class="text-center mb-4">Contact Us</h2>
            <form method="post" action="/contact-us">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Your Name">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email"  placeholder="Your Email">
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea class="form-control" id="message" rows="5" name="message" placeholder="Your Message"></textarea>
                </div>
                <div class="text-center">
                <input type="submit" class="btn button mt-2 " value="Submit" style="color: white;">
                </div>
            </form>
            </div>
        </div>
    </div>
</div>


