<style>
    .login {

        width: fit-content;
        margin-left: auto;
        margin-right: auto;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        background-color: rgba(255, 255, 255, 0.424);
    }

    input {
        height: 45px;
    }

    #change_password {
        display: none;
        width: 100%;
        height: 100%;
        background-color: #fdfeff96;
        position: fixed;
        top: 20%;
        left: 0;
    }

    .otp-container {
        max-width: 400px;
        margin: 5px auto;
        margin-top: 100px;

        background-color: #fdfeff;
        border-radius: 5PX;
        padding: 10PX;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .change_pass_inp {
        text-align: center;
        margin: 2px;
        border: 2px solid #000000;
        border-radius: 5px;
        width:80%
    }

    .change_pass_inp:focus {
        outline: none;
        border: 3px solid rgba(0, 119, 255, 0.335);
        
    }

    .confirm {
        display: block;
        position: fixed;
        top: 0%;
        left: 50%;
        width: max-content;
        transform: translate(-50%, -70%);
        background-color: #ffffff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        border-radius: 5px;
        transition: top 0.5s ease-out;
    }
</style>
<section class="mb-5" style="margin-top: 70px;padding-bottom: 40px;">
    <div class="container-fluid pt-5 m-auto">
        <div class="row pt-4 ">
            <div class="col-12">
                <div class="login">
                    <form action="/login" class="text-center" method="post">
                        <div>
                            <h2>Login</h2>
                        </div>
                        <div>Don't have an acoount?<a class="a-new" href="/signup">sign up</a></div>
                        <div class="form-group pt-4"> <input class="text-center border border-shadow inp"
                                id="log_email_inp" type="text" name="email" placeholder="Email" required></div>
                        <div class="form-group pt-2"><input class="text-center border border-shadow inp" type="password"
                                name="password" placeholder="Password" required></div>

                        {{#if logerr}}
                        <div style="color:red">
                            <p>{{logerr}}</p>
                        </div>
                        {{/if}}

                        <div class="pt-3  mb-3"><input class="btn btn-success form-group"
                                style="height: 40px !important; width: 100%;" type="submit" role="button" value="login">
                        </div>
                        <a onclick="forgot_password()"
                            style="text-decoration: underline;color: rgb(30, 48, 239);cursor:pointer">forgot password?</a>
                        <hr>
                        <div class="pt-2" style="margin-left: auto; width: 100%;">
                            <a href="/auth/google" class=""
                                style="background-color: rgb(251, 251, 250);box;text-decoration: none;color: black;box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);padding: 5px; padding-bottom: 10px;border-radius: 2px;padding: 15px;">
                                <img src="/project-images/google.png" width="30px" height="30px"
                                    alt="Login with Google"><span style="padding-left: 2px;">Signup with google</span>
                            </a>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
</section>
<div class="otp-cont" id="otp-cont_login">
    <div class="container otp-container text-center">
        <h2>Enter 4-Digit OTP</h2>
        <p>Please enter the 4-digit OTP sent to your email address.</p>

        <div class="form-group">
            <form id="otp-form_login">
                <input type="password" class="otp-input" id="otp1_login" name="otp1" maxlength="1" required
                    inputmode="numeric">
                <input type="password" class="otp-input" id="otp2_login" name="otp2" maxlength="1" required
                    inputmode="numeric">
                <input type="password" class="otp-input" id="otp3_login" name="otp3" maxlength="1" required
                    inputmode="numeric">
                <input type="password" class="otp-input" id="otp4_login" name="otp4" maxlength="1" required
                    inputmode="numeric">

        </div>
        <div style="color:red">
            <h5 id="err-otp_login"></h5>
        </div>
        <div>
            <span id="res_login">Resend otp in: 00:</span><span id="timer_login">30</span><span class="btn"
                type="button" id="resend_login" onclick="resend_otp_login()"
                style="text-decoration: underline;color: blue;border: none;"></span>
        </div>
        <button type="submit" class="btn btn-primary button m-2">Verify OTP</button>
        </form>
    </div>
</div>


<div class="" id="change_password">
    <div class="container otp-container text-center">
        <h2>Enter New Password</h2>
        <p>Please enter the new password to reset password.</p>

        <div class="form-group">
            <form action="" id="reset_password">
                <input type="password" class="change_pass_inp" id="password_change" name="password" required
                    placeholder="password">
                <input type="password" class="change_pass_inp" id="c_password_change" name="c_password" required
                    placeholder="confirmation password">


        </div>
        <div style="color:red">
            <h5 id="err-password"></h5>
        </div>

        <button type="submit" class="btn btn-primary button m-2">Submit</button>
        </form>
    </div>
</div>
<div id="cus-alert3" class="custom-alert">
    <p>Password changed successfully.</p>
</div>

<div id="email_null" class="confirm text-center bg-color text-white">
    <p id="msg_email">Please Enter your Email to reset password ! </p>
</div>
