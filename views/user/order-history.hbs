<div class="container">
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                    <th>Date</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Mobile</th>
                    <th>Amount</th>
                    <th>Payement</th>
                    <th>Status</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each orders}}
                    
                    <tr>
                        <td>{{this.deliveryDetails.date}}</td>
                        <td>{{this.deliveryDetails.address}}</td>
                        <td>{{this.deliveryDetails.pincode}}</td>
                        <td>{{this.deliveryDetails.phone}}</td>
                        <td>Rs.{{this.total}}/-</td>
                        <td>{{this.payementMethod}}</td>
                        <td>{{this.status}}</td>
                        <td><a href="/view-order-products/{{this._id}}" class="btn btn-primary">view product</a></td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</div>