<script>
  var i=0
  document.getElementById('img1').checked=true
  var images=['/project-images/ad2.jpg','/project-images/ad3.jpg']
  var cur=document.getElementById('ad-img').src
  images.push(cur)
  setInterval(()=>{
      document.getElementById('ad-img').src=images[i]
      i++
    if(i==images.length) i=0
    if(i==0){
      document.getElementById('img1').checked=true
    }else if(i==1){
      document.getElementById('img2').checked=true
    }else{
      document.getElementById('img3').checked=true
    }
  },4000)
  document.getElementById('img1').addEventListener('change',()=>{
    document.getElementById('ad-img').src=images[2]

  })
  document.getElementById('img2').addEventListener('change',()=>{
    document.getElementById('ad-img').src=images[0]

  })
  document.getElementById('img3').addEventListener('change',()=>{
    document.getElementById('ad-img').src=images[1]

  })
</script>
