<section class="">
  <div class="container-fluid text-center">
    <h3>Smart Phones</h3>
    <div class="scrolling-wrapper">
      {{#each product}}
      {{#product_check this 'smart phone'}}
      <div class="col-6 col-md-2 product">
        <div class="card-outer m-2" style="border: none; ">
          <div class="card border border-shadow card-outer">
            <img src="/product-image/{{this._id}}.jpg" class="card-img-top" style="height:13em" alt="">
            <p class="card-text">{{this.name}}</p>
            <div class="card-body pt-0" style="line-height: 3px;">
              <p class="card-text">Rs.{{this.price}}/-</p>
            </div>
            <div class="pt-0 description-text" style="display: block;overflow: break-word;">
              <p class="card-text mt-0">{{this.description}}</p>
            </div>
            <div class="mb-2"><button class="btn button" onclick="addToCart('{{this._id}}',{{user}})"
                style="color: rgb(255, 255, 255);" cl>add to cart</button></div>
          </div>
        </div>
      </div>
      {{/product_check}}
      {{/each}}
    </div>
    <hr>
  </div>
</section>

