<div class="container">
    <div class="row pt-3">
        <div class="col-md-12">
            <table class="table mt-3" id="user">
                <thead>
                    <tr>
                        <th>user name </th>
                        <th>email</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>