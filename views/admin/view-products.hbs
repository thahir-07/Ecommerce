<section>
    <div class="container ">
        <div class="row">
            <div class="col-md-12 mb-4">
        <div class="p-3">
            <a href="/admin/add-products" class=" item-center ml-auto btn mt-3 mb-2 text-white  " style="background-image: linear-gradient( rgb(0, 255, 123),rgb(51, 141, 87));" >Add items</a>
            
            </div>
        <table class="table " id="productTable">
            <thead>
                <tr>
                    
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Sub Category</th>
                    <th scope="col">image</th>
                    <th> Edit</th>
                    <th>Delete</th>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.productData.productCategory}}</td>
                    <td>{{this.productData.subCategory}}</td>
                    
                    <td><img style="height: 50px;width: 50px;" src="/product-image/{{this.productData._id}}.jpg" alt=""></img></td>
                    <td><a href="/admin/edit-products/{{this.productData._id}}" class=" item-center ml-auto   text-white border btn btn-info "  > Edit Item</a></td>
                    <td><a href="/admin/delete-products/{{this.productData._id}}" class=" item-center ml-auto  text-white border  btn btn-danger "  onclick="return confirm('are you sure you want to delete :{{this.name}}')"> Delete Item</a></td>

                
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
    </div>
    </div>
</section>
<script>
    $(function(){
$('#productTable').DataTable()

})
</script>