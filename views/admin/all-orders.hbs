<div class="container">
    <div class="row">
        <div class="col mt-3">
            <table id="orderHistoryTable" class="table pt-4">
                <thead>
                    <tr>
                    <th>Date</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Mobile</th>
                    <th>Amount</th>
                    <th>Payement</th>
                    <th>Status</th>
                    <th>View Product</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each orders}}
                    
                    <tr>
                        <td>{{this.deliveryDetails.date}}</td>
                        <td>{{this.deliveryDetails.name}}</td>
                        <td>{{this.deliveryDetails.area_street}}</td>
                        <td>{{this.deliveryDetails.pincode}}</td>
                        <td>{{this.deliveryDetails.number}}</td>
                        <td>Rs.{{this.total}}/-</td>    
                        <td>{{this.payementMethod}}</td>
                        <td>{{this.status}}</td>
                        <td><a href="/admin/view-order-products/{{this._id}}" class="btn btn-primary">view product</a></td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</div>