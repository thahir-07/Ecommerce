
  <section class="pt-3">
    <div class="container-fluid">
      <div class="row">
        
        {{#each products}}
        <div class="col-4 col-md-3 col-lg-2 pt-3 text-center ">
          <div class="card" style="height: 23rem;">
            <img src="{{this.image}}" class="card-img-top" style="height:13em" alt="...">
            <div class="card-body">
              <p class="card-text">{{this.description}}</p>
              <a class="btn button" style="color: rgb(255, 255, 255);">add to cart</a>
            </div>
          </div>
        </div>
        {{/each}}

      </div>
    </div>
  </section>
  